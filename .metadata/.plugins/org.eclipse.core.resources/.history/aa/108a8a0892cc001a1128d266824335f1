package com.eomcs.basic.ex04;

public class Exam0230 {
  public static void main(String[] args) {
    // 사용할 변수를 시작부분에 미리 선언해도 된다.
    int age;
    int weight;
    int height;
    
    
    age = 20;
    weight = 100;
    height = 200;
    
    //변수가 필요할 때 블록 중간에 언제든 선언 가능
    int score;
    score = 100;
    
  }
}

//변수의 종류 
package com.eomcs.basic.ex04;

public class Exam0400 {
  public static void main(String[] args) {
   // 정수
    byte b;
    short s;
    int i;
    long l;
    
    // 부동소수점
    float f;
    double d;
    
    // 문자 
    char c;
    
    // 논리 
    boolean bool;
    
    //레퍼런스
    String str;
    
    
    
    // 변수의 메모리 크기
    // 정수 리터럴은 기본이 4바이트
    // 원래 작은 메모리에 저장할 수 없지만,
    // 오른쪽의 값이 4바이트 정수 리터럴일 경우
    // 메모리에 그 리터럴을 저장할 수 있다면 예외적으로 허락한다.
    b = -128;
    b = 127;
    // 리터럴 끼리의 연산 결과는 리터럴로 취급
    b = 20 * 3;
    
    b = 120 + 7;
    // b = 120 + 8;
    
    byte b2 + 20;
    //b = 100 +b2;
    
    s = -32768;
    s = 32767;
    //s = -32769;
    //s = 32768;
    
    i = -21_0000_0000;
    i = 21_0000_0000;
    //i = -22_0000_0000;
    //i = 22_0000_0000;
    
    l = -922_0000_0000_0000_0000L;
    l = 922_0000_0000_0000_0000L;
    //l = -930_0000_0000_0000_0000L;
    //l = 930_0000_0000_0000_0000L;
    
    b = 100; 
    s = 100;
    i = 100;
    
    //b = 100
  }
}
